{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**",
      "!**/.vscode",
      "!**/.zed",
      "!**/src/routeTree.gen.ts",
      "!**/src/**/__snapshots__",
      "!**/node_modules",
      "!**/dist",
      "!**/coverage",
      "!**/public/mockServiceWorker.js",
      "!**/infra/cdk.out"
    ],
    "ignoreUnknown": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 160,
    "useEditorconfig": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "semicolons": "always",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double"
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "tailwindDirectives": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
